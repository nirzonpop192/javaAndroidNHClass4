<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button">
   <!--     <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginStart">1dp</item>-->

        <item name="android:layout_width">@dimen/btn_width</item>
        <item name="android:layout_height">@dimen/btn_hight</item>
        <item name="android:background">@drawable/btn_digit_round_shap</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/btn_txt_size</item>

    </style>

    <style name="Button.Oprand" parent="Button">
        <item name="android:background">@drawable/btn_opend_round_shap</item>
    </style>

    <style name="Layout">
        <item name="android:weightSum">4</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Layout.SubLayout" parent="Layout">
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>
</resources>
